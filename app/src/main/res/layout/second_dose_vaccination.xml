<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/SecondDose"
        android:layout_width="334dp"
        android:layout_height="56dp"
        android:text="Second Dose Schedule"
        android:textColor="#0C0B0B"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="217dp"
        android:layout_height="59dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Pin Number:"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/SecondDoseDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SecondDose" />

    <Button
        android:id="@+id/ContSecReg"
        android:layout_width="273dp"
        android:layout_height="73dp"
        android:text="Check Hospital Avability"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="465dp" />

    <EditText
        android:id="@+id/SecondDoseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="Second Dose Date:"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/ContSecReg"
        tools:layout_editor_absoluteX="104dp" />
</androidx.constraintlayout.widget.ConstraintLayout>